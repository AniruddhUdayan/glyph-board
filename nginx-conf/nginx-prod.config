http{
	server {
    listen 80;
    server_name api.glyph-board.xyz;

    location / {
        proxy_pass http://localhost:3001;
    }
}
	server {
    listen 80;
    server_name ws.glyph-board.xyz;

    location / {
        proxy_pass http://localhost:8081;
    }
}
server {
    listen 80;
    server_name www.glyph-board.xyz;

    location / {
        proxy_pass http://localhost:3000;
    }
}
}